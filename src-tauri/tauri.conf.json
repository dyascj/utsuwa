{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Utsuwa",
  "version": "0.2.4",
  "identifier": "com.utsuwa.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Utsuwa",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "overlay",
        "title": "Utsuwa Companion",
        "url": "/overlay",
        "width": 400,
        "height": 600,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "category": "Entertainment",
    "shortDescription": "Open Source AI Soul Vessel",
    "longDescription": "Utsuwa is a VRM avatar viewer with LLM chat and TTS. Load VRM models, chat with AI, and have the avatar speak responses with lip-sync.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "signingIdentity": "-"
    },
    "windows": {
      "wix": null,
      "nsis": null
    }
  }
}
